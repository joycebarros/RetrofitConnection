<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_alocacao"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_launcher_background"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_alocacao_curso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Curso"
        app:layout_constraintStart_toEndOf="@id/image_alocacao"
        app:layout_constraintEnd_toStartOf="@id/tv_alocacao_dia"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_alocacao_professor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Professor"
        app:layout_constraintTop_toBottomOf="@+id/tv_alocacao_curso"
        app:layout_constraintEnd_toEndOf="@id/tv_alocacao_curso"
        app:layout_constraintStart_toEndOf="@id/image_alocacao" />

    <TextView
        android:id="@+id/tv_alocacao_dia"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Dia"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>